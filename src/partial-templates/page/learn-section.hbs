<a id="learn-section"></a>
{{#with learn-section}}
  <section class="section section--color">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-xl-6 d-flex flex-column justify-content-center align-items-center mb-5 mb-xl-0">
          <img
            src="{{logoSrc}}"
            alt="{{logoAlt}}"
            class="mb-3"
            style="max-width: 150px;"
          />
          <h2 class="section__title">
            {{title}}
          </h2>
          <p class="text-center">{{description}}</p>
        </div>
        <div class="col-lg-12 col-xl-6">
          <div class="d-block w-100" style="height: 368px;">
            <iframe
              class="w-100 h-100"
              src="{{videoSrc}}"
              title="{{videoTitle}}"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              style="object-fit: cover;"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
{{/with}}